<head>
  <link rel="stylesheet" href="/stylesheets/adminAgregar.css">
</head>

<body>
<div class="container" style="margin-top:100px;">
    <div class="row">
        <div class="offset-3 col-6 offser-3">
            <h1>Agregar</h1><br>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <div class="mb-3 row">
                    <input type="text" class="form-control-lg" placeholder="Titulo" name="titulo">
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control-lg" placeholder="subtitulo" name="subtitulo"></textarea>
                </div>
                <div class="mb-3 row">
                    <label>Imagen: </label>
                    <input type= "file" class= "form-control" name="imagen" id="imagen" />
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control-lg" placeholder="Cuerpo" name="cuerpo"></textarea>
                </div>
                <button tupe="submit" class="btn btn-primary" id="guardarBoton">Guardar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>

</body>